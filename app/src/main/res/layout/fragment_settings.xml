<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/smoke_white"
    android:id="@+id/rl_main">

    <View
        android:id="@+id/v_status_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/app_color"/>

    <TextView
        android:id="@+id/tv_title_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_color"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@id/v_status_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title_settings"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_language_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/language_ic"
                    android:drawablePadding="10dp"
                    android:text="@string/language"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_toStartOf="@id/tv_language_content"
                    android:layout_alignParentStart="true"
                    android:textAlignment="viewStart"
                    android:textDirection="locale"/>

                <TextView
                    android:id="@+id/tv_language_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_blue"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:background="@color/line_gray"
                android:alpha="0.3"/>

            <TextView
                android:id="@+id/tv_how_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/wallet_ic"
                android:drawablePadding="10dp"
                android:text="@string/how_to_use"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="20dp"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:background="@color/line_gray"
                android:alpha="0.3"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/contact_us"
                android:drawablePadding="10dp"
                android:text="@string/contact_us"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="20dp"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:background="@color/line_gray"
                android:alpha="0.3"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/aboutus_ic"
                android:drawablePadding="10dp"
                android:text="@string/about_us"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="20dp"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:background="@color/line_gray"
                android:alpha="0.3"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/terms_ic"
                android:drawablePadding="10dp"
                android:text="@string/terms_conditions_title"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="20dp"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:background="@color/line_gray"
                android:alpha="0.3"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_return_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/return_policy_ic"
                android:drawablePadding="10dp"
                android:text="@string/return_policy"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="20dp"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:background="@color/line_gray"
                android:alpha="0.3"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_rate_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/rate_ic"
                android:drawablePadding="10dp"
                android:text="@string/rate_app"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="20dp"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:background="@color/line_gray"
                android:alpha="0.3"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_share_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/share_ic"
                android:drawablePadding="10dp"
                android:text="@string/share_app"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="20dp"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:background="@color/line_gray"
                android:alpha="0.3"
                android:visibility="visible"/>

        </LinearLayout>

    </ScrollView>

    <com.rey.material.widget.ProgressView
        android:id="@+id/pv_load"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressMode="indeterminate"
        app:pv_progressStyle="@style/ColoredCircularProgressDrawable" />

</RelativeLayout>