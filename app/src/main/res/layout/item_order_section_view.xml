<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/current_order_section"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@color/smoke_white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/current_orders"
            android:id="@+id/section_image"
            />

        <TextView
            android:id="@+id/tv_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/section_image"
            android:layout_toStartOf="@+id/tv_all_orders"
            android:layout_marginStart="10dp"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="@string/current_request"/>

        <TextView
            android:id="@+id/tv_all_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:padding="5dp"

            android:text="@string/show_all"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/red_corners" />


    </RelativeLayout>
</RelativeLayout>